<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScreenContainer">

    <com.programonks.bluetoothtoolkit.ui.components.SupportedBtTechnologiesComponent
        android:id="@+id/bt_supported_functionalities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_supported_functionalities"
        android:layout_marginTop="@dimen/margin_medium"
        android:listSelector="@android:color/transparent"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        tools:listitem="@layout/item_home" />
</RelativeLayout>